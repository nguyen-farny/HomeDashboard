<Window x:Class="DashBoardWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashBoardWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="10, 10, 10, 10"  ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="40"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
        </Border>
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
        </Border>
        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
        </Border>
        <Border Grid.Column="0"  Grid.Row="1" BorderBrush="YellowGreen" BorderThickness="1">
        </Border>
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="YellowGreen" BorderThickness="1">
        </Border>
        <Border Grid.Column="2" Grid.Row="1" BorderBrush="YellowGreen" BorderThickness="1">
        </Border>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text="Line" />
        <TextBlock Grid.Row="0"  Grid.Column="1" Margin="0,0,10,0" Text="Direction" />
        <TextBlock Grid.Row="0"  Grid.Column="2" Margin="0,0,10,0" Text="Schedules" />
        <TextBlock Grid.Row="1"  VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0" Text="A" />
        <TextBlock Grid.Row="1"  VerticalAlignment="Center" Grid.Column="1" Margin="0,0,10,0" Text="Paris" />
        <ListBox Name="rer_list" HorizontalAlignment="Left" BorderThickness="0"  Grid.Row="1"  Grid.Column="2">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding message}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
